@model OA.Web.Models.SingInModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>

    <div id="top-menu" class="navbar navbar-light fixed-top">
        <div id="top-menu-sidebar" class="collapsed"><i class="fa fa-th"></i></div>
        <div class="row titleBlock">
            <div id="top-menu-content" style="display: block;">
                <div class="top-menu-content-item">
                    <span style="margin-right: 5px;">
                        <img src="~/Content/images/Logo_ukr_white.png" width="84" />
                    </span>
                    <span id="db-expertise">БД Експертизи</span>
                </div>
            </div>
        </div>
        <div class="form-inline" id="login-menu-user">
            <ul class="nav">
                <li class="nav-item" id="user-info" title="@Session["currentUser"]">
                    <i class="fa fa-user"></i> <span class="user-name">@Session["currentUser"]</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="row" style="position:relative; top:100px;">
        <div class="col-12">
            <div class="container">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <div>
                            <h2 class="col"> Вхід в систему</h2>
                        </div>
                        @Html.ValidationSummary("", new { @class = "alert-danger" })

                        <div class="form-group col-md-4">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Логін" } })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Пароль" } })
                        </div>
                        <div class="form-group col">
                            <input type="submit" value="Увійти" class="btn btn-success" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>